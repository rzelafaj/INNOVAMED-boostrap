
@{
    ViewBag.Title = "Login-";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-image:image(Imagenes/lobi.jpg)">
    <!--Formulario Login-->
    <div class="container-lg text-center ">
        <img src="~/Imagenes/logo.png" alt="Logo Innovamed" width="300" height="100" />
    </div><br />

    <div class="container-fluid mt-5 ">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Iniciar Sesión</h3>
                    </div>
                    <div class="card-body">
                        <form action="#" method="post" style="text-align:center">
                            <label for="username">Usuario</label>
                            <div class="form-group" style="display:flex; text-align:center;">
                                <i class='bx bx-user'></i>
                                <input type="text" placeholder="Email or username" class="form-control" id="username" name="username" required>

                            </div>
                            <br />
                            <label for="password">Contraseña</label>
                            <div class="form-group" style="display:flex; text-align:center;">
                                <i class='bx bxs-lock-alt'></i>
                                <input type="password" placeholder="Password" class="form-control" id="password" name="password" required>

                            </div>
                            <br />

                            <div class="form-check mb-3">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" name="remember"> Remember me
                                </label>
                            </div>
                            <div class="container-fluid d-grid text-center bg-white">

                                <button type="submit" class="btn btn-primary btn-block"><span class="spinner-grow spinner-grow-sm"></span>Ingresar</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><br /><br />



  
