
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <!--barra de navegacion de menu-->
    <div>
        <ul class="nav nav-pills nav-fill gap-2 p-1 small shadow-sm" id="pillNav2" role="tablist" style="background-color: #C4F9F8; --bs-nav-link-color: var(--bs-white); --bs-nav-pills-link-active-color: var(--bs-primary); --bs-nav-pills-link-active-bg: var(--bs-white);">
            <li class="nav-item" role="presentation">
                <!--se cambio logo de innovamed-->
                <img src="~/Imagenes/logoInnovamed.jpg" width="110">
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false"> @Html.ActionLink("INICIO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link active rounded-5" id="home-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="true"><b>Medicina General</b></button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5" id="profile-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false"><b>Especialidades</b></button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">@Html.ActionLink("Registrarse", "RegistrarPaciente", "Registro", new { area = "" }, new { @class = "navbar-brand" })</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false"> @Html.ActionLink("Inicio de sesion", "Login", "Login", new { area = "" }, new { @class = "navbar-brand" })</button>
            </li>
        </ul>
    </div><br /><br />

    <!--Formulario Login-->
    <div class="container-lg text-center ">
        <img src="~/Imagenes/logo.png" alt="Logo Innovamed" width="300" height="100" />
    </div><br />

    <div class="container-fluid mt-5 ">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Iniciar Sesión</h3>
                    </div>
                    <div class="card-body">
                        <form action="#" method="post">
                            <div class="form-group">

                                <label for="username">Usuario</label>
                                <input type="text" placeholder="Email or username" class="form-control" id="username" name="username" required>
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="password">Contraseña</label>

                                <input type="password" placeholder="Password" class="form-control" id="password" name="password" required>
                            </div>
                            <br />

                            <div class="form-check mb-3">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" name="remember"> Remember me
                                </label>
                            </div>
                            <div class="container-fluid d-grid text-center bg-white">

                                <button type="submit" class="btn btn-primary btn-block"><span class="spinner-grow spinner-grow-sm"></span>Ingresar</button>
                            </div>

                        </form>
                    </div>

                </div>

            </div>

        </div>
    </div><br /><br />



    <!--Barra de informacion infe-->
    <!-------------------------------->
    <!-------------------------------->
    <div class="container-fluid" style="background-color: #0093B9; color: #0093B9; ">
        <!--modificando div general-->
        <div class=" row py-3 align-text-top text-white text-center">
            <!-- midificando texto-->
            <nav class="navbar">
                <div class="col-md-4">
                    <!-- aliniacion de iconos-->
                    <div>
                        <a href="#"> <img src="~/Imagenes/cel.png" width="30" /></a>
                    </div>
                    <samp>Teléfono <br />(503)0000-0000</samp>
                </div>
                <!-- -->
                <div class="col-md-4">
                    <!-- aliniacion de iconos-->
                    <div>
                        <a href="#"> <img src="~/Imagenes/correo.png" width="30" /></a>
                    </div>
                    <samp>Correo <br />example@mail.com</samp>
                </div>
                <!-- -->
                <div class="col-md-4">
                    <!-- aliniacion de iconos-->
                    <div>
                        <a href="#"> <img src="~/Imagenes/ubi.png" width="30" /></a>
                    </div>
                    <samp>El Salvador <br />San salvador</samp>
                </div>
                <!-- -->
            </nav>
        </div>
    </div>


</body>
</html>
