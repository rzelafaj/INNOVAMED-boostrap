
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>INNOVAMED</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <!--barra de navegacion de menu-->
    <div>
        <ul class="nav nav-pills nav-fill gap-2 p-1 small color-Interno rounded-5 shadow-sm" id="pillNav2" role="tablist" style="--bs-nav-link-color: var(--bs-white); --bs-nav-pills-link-active-color: var(--bs-primary); --bs-nav-pills-link-active-bg: var(--bs-white);">
            <li class="nav-item" role="presentation">
                <img src="~/Imagenes/logo.png" width="110">
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link active rounded-5" id="home-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="true">Medicina General</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5" id="profile-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Especialidades</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">Registrarse</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5" id="contact-tab2" data-bs-toggle="tab" type="button" role="tab" aria-selected="false">inicio de sesion</button>
            </li>
        </ul>
    </div>
    <!-- Carousel -->
    <div class="d-flex justify-content-center">
        <div class="contenedor">
            <div id="demo" class="carousel slide " data-bs-ride="carousel">

                <!-- botones indicadore -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
                </div>

                <!-- imagenes del carousel -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Imagenes/pp.jpg" alt="Medicos de Exelencia" class="d-block w-50">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Imagenes/Nosotros.jpg" class="d-block w-90">
                    </div>
                </div>

                <!-- botones izquierda y derecha  -->
                <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
    </div>

    <!--barra de preguntas frecuentes y agendar cita -->
    <div class="barra-de-navegacion">
        <ul class="nav nav-pills nav-fill gap-2 p-1 small color-Interno rounded-5 shadow-sm centrar-y-reducir" id="pillNav2" role="tablist" style="--bs-nav-link-color: var(--bs-white); --bs-nav-pills-link-active-color: var(--bs-primary); --bs-nav-pills-link-active-bg: var(--bs-white);">
            <li class="nav-item" role="presentation">
                <img src="~/Imagenes/icono1.jpg" width="30">
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link active rounded-5 boton" id="home-tab2" type="button" role="tab" aria-selected="true">Preguntas frecuentes</button>
            </li>
            <li class="nav-item" role="presentation">
                <img src="~/Imagenes/Calendario.jpg" width="30">
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link rounded-5 boton" id="contact-tab2" type="button" role="tab" aria-selected="false">Agendar una cita</button>
            </li>
        </ul>
    </div><br>
    <!--texto de consulta-->
    <div class="testo-1">
        <asp:Label runat="server" Text="Label">¿Como hacer una cita?</asp:Label>
    </div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-4">
                <h3>Paciente de nuevo ingreso</h3>
                <p>informacion para pacientes de citas medicas</p>
                <p>Requisitos</p>
            </div>
            <div class="col-sm-4">
                <h3>Paciente sin cita medica</h3>
                <p>Imformacion para pacientes registrados que no tengan cita medica</p>
                <p>datos importantes</p>
            </div>
            <div class="col-sm-4">
                <h3>Paciente con cita medica</h3>
                <p>Informacion para pacientes que tengan citas medicas</p>
                <p>datos importantes</p>
            </div>
        </div>
    </div>

</body>
</html>
